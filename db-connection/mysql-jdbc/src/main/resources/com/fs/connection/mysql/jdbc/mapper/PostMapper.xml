<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fs.connection.mysql.jdbc.mapper.PostMapper">
    <select id="findPostByUserId" resultType="com.fs.connection.mysql.jdbc.bean.Post">
        select * from post where user_id = #{userId}
    </select>
</mapper>